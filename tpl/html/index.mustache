<div class="list">
{{# MODS }}
    <div class="mod">
        <div class="title">
            <h3><a href="/mod/{{ IDENTIFIER }}">{{ NAME }}</a> <small> - {{ DESC }}</small></h3>
        </div>
        <div class="info">
            <div>
                <p>{{{ LONGDESC }}}</p>
            </div>
            <div class="source">
                <div class="left">
                    <p>Opensource link:</p>
                    <p>Version:</p>
                </div>
                <div class="right">
                    <p><a href="{{ OPENSOURCE }}" target="_blank">{{ OPENSOURCE }}</a></p>
                    <p>{{ VCODE }}, last updated {{ LASTUPDATE }}</p>
                </div>
            </div>
        </div>
    </div>
{{/ MODS }}
</div>
